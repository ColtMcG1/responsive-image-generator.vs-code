{
  "name": "responsive-image-generator.vs-code",
  "displayName": "Responsive Image Generator",
  "description": "Generate responsive images in multiple sizes for web development. Works inline in the text editor.",
  "version": "1.0.0",
  "publisher": "Colton McGraw",
  "repository": {
    "type": "git",
    "url": "https://github.com/ColtMcG0/responsive-image-generator.vs-code"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:markdown",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:vue",
    "onLanguage:angular",
    "onLanguage:blazor",
    "onLanguage:csharp",
    "onLanguage:cshtml"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "responsive-image-generator.generate",
        "title": "Generate Responsive Image"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0"
  },
  "dependencies": {
    "sharp": "^0.34.3"
  }
}
