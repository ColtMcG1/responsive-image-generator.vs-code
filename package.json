{
  "name": "responsive-image-generator",
  "displayName": "Responsive Image Generator",
  "description": "Generate responsive images in multiple sizes for web development. Works inline in the text editor.",
  "version": "1.0.0",
  "publisher": "coltonmcgraw",
  "repository": {
    "type": "git",
    "url": "https://github.com/ColtMcG0/responsive-image-generator.vs-code"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:markdown",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:vue",
    "onLanguage:angular",
    "onLanguage:blazor",
    "onLanguage:csharp",
    "onLanguage:cshtml"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "responsive-image-generator.generate",
        "title": "Generate Responsive Image"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Responsive Image Generator",
      "properties": {
        "responsiveImageGenerator.defaultSizes": {
          "type": "array",
          "items": { "type": "number" },
          "default": [320, 480, 640, 960, 1280, 1600, 1920, 2560, 3840, 5120, 7680],
          "description": "Default image sizes to generate."
        },
        "responsiveImageGenerator.useRelativePaths": {
          "type": "boolean",
          "default": true,
          "description": "Insert image paths as relative to ```staticAssetsRoot``` root."
        },
        "responsiveImageGenerator.staticAssetsRoot": {
          "type": "string",
          "default": "",
          "description": "Default working directory for your project. If you're using relative paths, this is the folder relative to which paths will be generated."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0"
  },
  "dependencies": {
    "sharp": "^0.34.3"
  }
}
